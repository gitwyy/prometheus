<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>war</packaging>
	<parent>
		<groupId>com.pay.risk</groupId>
		<artifactId>aphrodite</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>aphrodite-core</artifactId>
	<dependencies>
	</dependencies>
	<profiles>
		<profile>
			<id>production</id>
			<properties>
				<profiles.active>production</profiles.active>
			</properties>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
						<excludes>
							<exclude>astrotrain-consumer.properties</exclude>
							<exclude>astrotrain-producer.properties</exclude>
							<exclude>dubbo.properties</exclude>
							<exclude>system.properties</exclude>
							<exclude>logback.xml</exclude>
							<exclude>orderliness.properties</exclude>
							<exclude>redisRecommend.properties</exclude>
							<exclude>platform/*</exclude>
						</excludes>
					</resource>
					<resource>
						<directory>src/main/production/conf</directory>
						<filtering>true</filtering>
					</resource>
					<resource>
						<directory>src/main/production/common</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
			</build>
		</profile>

		<profile>
			<id>production-cron</id>
			<properties>
				<profiles.active>production-cron</profiles.active>
			</properties>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
						<excludes>
							<exclude>astrotrain-consumer.properties</exclude>
							<exclude>astrotrain-producer.properties</exclude>
							<exclude>dubbo.properties</exclude>
							<exclude>system.properties</exclude>
							<exclude>orderliness.properties</exclude>
							<exclude>redisRecommend.properties</exclude>
							<exclude>platform/*</exclude>
						</excludes>
					</resource>
					<resource>
						<directory>src/main/production/cron</directory>
						<filtering>true</filtering>
					</resource>
					<resource>
						<directory>src/main/production/common</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
			</build>
		</profile>
		<profile>
			<id>test</id>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>false</filtering>
						<excludes>
							<exclude>astrotrain-consumer.properties</exclude>
							<exclude>astrotrain-producer.properties</exclude>
							<exclude>dubbo.properties</exclude>
							<exclude>system.properties</exclude>
							<exclude>logback.xml</exclude>
						</excludes>
					</resource>
					<resource>
						<directory>src/main/test/conf</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
			</build>
		</profile>
	</profiles>
</project>